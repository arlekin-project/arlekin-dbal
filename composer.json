{
    "name": "arlekin/arlekin-dbal",
    "license": "MIT",
    "description": "A non-agnostic database abstraction layer.",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Benjamin Michalski",
            "email": "benjamin.michalski@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/arlekin-project/arlekin-common.git"
        }
    ],
    "require": {
        "php": ">= 5.5",
        "arlekin/arlekin-common": "dev-experimental/bmichalski"
    },
    "require-dev":  {
        "phpunit/phpunit": "~4.2",
        "phpmd/phpmd": "~2.0",
        "instaclick/php-code-sniffer": "~1.4",
        "phpdocumentor/phpdocumentor": "~2.5",
        "cebe/markdown": "~0.9"
    },
    "autoload": {
        "psr-4": {
            "Arlekin\\DatabaseAbstractionLayer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arlekin\\Common\\Tests\\": "vendor/arlekin/arlekin-common/tests/",
            "Arlekin\\DatabaseAbstractionLayer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php postInstallOrUpdate.php"
        ],
        "post-update-cmd": [
            "php postInstallOrUpdate.php"
        ]
    },
    "config": {
        "bin-dir": "bin"
    }
}
