{
    "name": "arlekin/dbal",
    "license": "MIT",
    "description": "A rather low level database abstraction layer.",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Benjamin Michalski",
            "email": "benjamin.michalski@gmail.com"
        }
    ],
    "require": {
        "php": ">= 5.5"
    },
    "require-dev":  {
        "phpunit/phpunit": "~4.2",
        "phpmd/phpmd": "~2.0",
        "instaclick/php-code-sniffer": "~1.4",
        "phpdocumentor/phpdocumentor": "~2.5",
        "cebe/markdown": "~0.9"
    },
    "autoload": {
        "psr-4": {
            "Arlekin\\Dbal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arlekin\\Dbal\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
