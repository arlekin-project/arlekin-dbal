{
    "name": "calam/dbal",
    "license": "MIT",
    "description": "A rather low level database abstraction layer.",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Benjamin Michalski",
            "email": "benjamin.michalski@gmail.com"
        }
    ],
    "require": {
        "php": ">= 7.0",
        "greenlion/php-sql-parser": "^4.0"
    },
    "require-dev":  {
        "phpunit/phpunit": "~6.0",
        "phpmd/phpmd": "~2.6",
        "instaclick/php-code-sniffer": "~1.4",
        "phpdocumentor/phpdocumentor": "~2.9",
        "cebe/markdown": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "Calam\\Dbal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Calam\\Dbal\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
