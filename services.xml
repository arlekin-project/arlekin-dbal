<?xml version="1.0" encoding="UTF-8"?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="dbal.manager.database_connection.class">Arlecchino\DatabaseAbstractionLayer\Manager\DatabaseConnectionManager</parameter>
    </parameters>
    <services>
        <service
            id="dbal.manager.database_connection"
            class="%dbal.manager.database_connection.class%">
            <argument
                type="service"
                id="service_container" />
        </service>
    </services>
</container>